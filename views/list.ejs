<%- include("header"); -%>

  <body>
    <div class="box" id="heading">
        <h1> <%= title %> </h1>
    </div>


    <div class="box">

      <% listitem.forEach(function(items){ %>
        <form action="/delete" method="post">
        <div class="item">
          <input type="checkbox" name="checkbox" value= "<%=items._id %>" onChange="this.form.submit()" >
          <p> <%= items.item %> </p>
          <input type="hidden" name="listname" value="<%= title %>"></input>
        </div>
        </form>
      <% }); %>

      <form action="/" method="post" class="item">
        <input type="text" name="list" placeholder="Add item..." autocomplete="off">
        <button type="submit" name="button" value="<%= title %>">+</button>
      </form>
    </div>

   <form class="newList" action="/newList" method="post">
     <input type="text" name="newList" placeholder="Add new list" autocomplete="off">
   </form>

<%- include("footer"); -%>

  </body>

</html>
